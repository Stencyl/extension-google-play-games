<?xml version="1.0" encoding="utf-8"?>
<extension>

  <section if="${enableGPG}">
    
    <source path="src" />
    <dependency name="google" path="dependencies/google" />
    <android extension="com.stencyl.GoogleServices.GooglePlayGames" />
    <setenv name="GOOGLE_APP_ID" value="${googleAppID}" />

  </section>

  <section unless="${enableGPG}">
    <source path="src-stub" />
  </section>
  
</extension>
